<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="lpi.news.admin.news.class">Lpi\NewsBundle\Admin\NewsAdmin</parameter>
        <parameter key="lpi.news.admin.news.controller">LpiNewsBundle:NewsAdmin</parameter>

    </parameters>

    <services>
        <service id="lpi.news.admin.news" class="%lpi.news.admin.news.class%">
            <tag name="sonata.admin" manager_type="orm" group="News"
                 label="Articles"
                 label_translator_strategy="sonata.admin.label.strategy.underscore"/>
            <argument/>
            <argument>%lpi.news.admin.news.entity%</argument>
            <argument></argument>

        </service>

    </services>
</container>
